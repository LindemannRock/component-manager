{#
    @description Form input component with label, validation, and error handling
    @category Forms
    @props {
        "name": {
            "type": "string",
            "required": true,
            "description": "Input name attribute"
        },
        "label": {
            "type": "string",
            "required": false,
            "description": "Input label"
        },
        "type": {
            "type": "string",
            "enum": ["text", "email", "password", "number", "tel", "url"],
            "default": "text",
            "description": "Input type"
        },
        "value": {
            "type": "string",
            "default": "",
            "description": "Input value"
        },
        "placeholder": {
            "type": "string",
            "default": "",
            "description": "Input placeholder"
        },
        "required": {
            "type": "boolean",
            "default": false,
            "description": "Whether input is required"
        },
        "disabled": {
            "type": "boolean",
            "default": false,
            "description": "Whether input is disabled"
        },
        "error": {
            "type": "string",
            "default": "",
            "description": "Error message to display"
        },
        "hint": {
            "type": "string",
            "default": "",
            "description": "Help text to display"
        }
    }
#}

{# Set defaults #}
{% set type = type ?? 'text' %}
{% set value = value ?? '' %}
{% set placeholder = placeholder ?? '' %}
{% set required = required ?? false %}
{% set disabled = disabled ?? false %}
{% set error = error ?? '' %}
{% set hint = hint ?? '' %}

<div class="form-group">
    {% if label %}
        <label for="{{ name }}" class="block text-sm font-medium text-gray-700 mb-1">
            {{ label }}
            {% if required %}
                <span class="text-red-500">*</span>
            {% endif %}
        </label>
    {% endif %}
    
    <input
        type="{{ type }}"
        id="{{ name }}"
        name="{{ name }}"
        value="{{ value }}"
        {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
        {% if required %}required{% endif %}
        {% if disabled %}disabled{% endif %}
        class="block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-0 sm:text-sm
               {% if error %}
                   border-red-300 text-red-900 placeholder-red-300 focus:ring-red-500 focus:border-red-500
               {% else %}
                   border-gray-300 focus:ring-blue-500 focus:border-blue-500
               {% endif %}
               {% if disabled %}bg-gray-100 cursor-not-allowed{% endif %}"
    >
    
    {% if error %}
        <p class="mt-2 text-sm text-red-600">{{ error }}</p>
    {% elseif hint %}
        <p class="mt-2 text-sm text-gray-500">{{ hint }}</p>
    {% endif %}
</div>